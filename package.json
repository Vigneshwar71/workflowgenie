{
  "name": "workflowgenie-mcp",
  "version": "1.0.0",
  "description": "AI-powered workplace orchestration MCP server",
  "type": "module",
  "main": "src/server.js",
  "scripts": {
    "start": "TRANSPORT=http NODE_ENV=production node src/server.js",
    "dev": "nodemon src/server.js",
    "dev:http": "TRANSPORT=http nodemon src/server.js",
    "build": "echo 'Nothing to build, using plain JS'",
    "test": "jest",
    "test:github": "node tests/github-integration.test.js",
    "test:slack": "node tests/slack-integration.test.js",
    "test:slack:live": "node tests/slack-integration.test.js live",
    "test:slack:channel": "node tests/slack-integration.test.js channel",
    "test:calendar": "node tests/calendar-integration.test.js",
    "test:calendar:live": "node tests/calendar-integration.test.js live",
    "test:calendar:availability": "node tests/calendar-integration.test.js availability",
    "test:integrations": "npm run test:github && npm run test:slack && npm run test:calendar",
    "test:workflow": "node tests/code-review-workflow.test.js",
    "test:all": "npm run test:integrations && npm run test:workflow",
    "test:real": "node test-real-workflow.js",
    "test:demo": "node end-to-end-test.js",
    "lint": "eslint src/",
    "format": "prettier --write src/",
    "deploy:fly": "flyctl deploy",
    "deploy:render": "echo 'Deploy to Render by connecting your GitHub repo'",
    "deploy:smithery": "./deploy-to-smithery.sh",
    "docker:build": "docker build -t workflowgenie-mcp .",
    "docker:run": "docker run -p 3000:3000 --env-file .env workflowgenie-mcp"
  },
  "keywords": [
    "mcp",
    "ai-agent",
    "workflow-automation",
    "github",
    "slack",
    "cequence",
    "descope"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@descope/node-sdk": "^1.7.0",
    "@modelcontextprotocol/sdk": "^0.4.0",
    "@notionhq/client": "^2.2.0",
    "@octokit/rest": "^20.0.0",
    "@slack/web-api": "^7.0.0",
    "axios": "^1.6.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.21.2",
    "googleapis": "^128.0.0",
    "node-fetch": "^3.3.2",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "chalk": "^5.6.0",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
